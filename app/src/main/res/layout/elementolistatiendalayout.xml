<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yoyi_pc.giftcloud.fragmentoIndi">

    <ImageView
        android:id="@+id/imagenProducto"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignBottom="@+id/progressBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logoempresa" />

    <TextView
        android:layout_marginLeft="100sp"
        android:layout_width="180sp"
        android:layout_marginTop="30sp"
        android:layout_height="wrap_content"
        android:text="Texto Frase"
        android:textColor="#FFA500"
        android:id="@+id/descripcionProducto"
        android:layout_below="@+id/nombreProducto"/>

    <TextView
        android:id="@+id/nombreProducto"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90sp"
        android:text="Titulo Frase"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF6347"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/precioProducto"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="70dp"/>

    <ImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:src="@drawable/logogiftcoin"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="60dp"/>

</RelativeLayout>
